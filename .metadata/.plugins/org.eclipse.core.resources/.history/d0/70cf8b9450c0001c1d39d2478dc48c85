
public class Aex_ch5_0420 {

	public static void main(String[] args) {

		int age;
		age = (int)(Math.random()*100)+1;
		System.out.println(age);
		
//		1~100까지 총합 / 평균 구하기.
//	1~100 2의 배수이면서 7의 배수. 갯수 및 총합 출력
		
		int sum=0;
		double avg=0.0;
		int count=0;
		
		for(int i=1; i<=100; i++) {
			sum += i;
		}
		avg = sum/100.0;
		System.out.println("1~100까지 총합은: " +sum);
		System.out.printf("1~100까지 평균은: %.1f",sum/100.0);
		System.out.println();
		int x=0;
		int sum2;
		for(int i=1; i<=100; i++) {
			if(i%2==0 && i%7==0) {
				x+=i;
				count++;
			}
		}
		System.out.println("2의 배수이면서 7의배수의 갯수: " + count);
		System.out.println("2의 배수이면서 7의배수의 총합: " + x);
		
		
	}

}
