import java.util.Arrays;

public class Aex_ch5_0418 {

	public static void main(String[] args) {

		int[][] arr = {
					 {5,5,5,5,5}
					,{10,10,10,10,10}
					,{20,20,20,20,20}
					,{30,30,30,30,30}
				
					};
		int total = 0;
		float avg = 0;
		float avgP = 0;
		for(int i=0; i< arr.length; i++) {
			for(int j=0; j<arr[i].length; j++) {
				total += arr[i][j];
				avgP += total/arr[i].length;
				System.out.println(avgP);
			}// end of for j
		}// end of for i
		avg = avgP / arr.length;
		System.out.println("총점 : " + total);
		System.out.println("평균: " + avg);
	}
}
