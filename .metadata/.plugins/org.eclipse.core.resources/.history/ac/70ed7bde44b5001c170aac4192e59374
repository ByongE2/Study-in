
public class Aex_01 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int num = 4000;  // 시 분 초
		int f=0;
		int after =0;
		
		f = ++num; // f= 4001초 num= 4001
		after = num++; // after 4001 , num= 4002
		
		System.out.println(num + "시" + f + "분" + after + "초");
		
		
	}

}
