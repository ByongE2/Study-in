
public class Aex_01 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int num = 4000;  // 시 분 초
		
		
		int h=num / 3600 ; 
		
		int m=num / 3600 % 60; // 4000&360
		
		int s=num;
		
		
		
//		f = ++num; // f= 4001초 num= 4001
//		after = num++; // after 4001 , num= 4002
		
		System.out.println(h + "시" + m +"분"  + s+"초");
		
		
	}

}
