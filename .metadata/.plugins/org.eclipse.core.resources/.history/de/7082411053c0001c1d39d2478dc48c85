
public class Aex_ch5_0420 {

	public static void main(String[] args) {

//		1~100까지 총합 / 평균 구하기.
//	1~100 2의 배수이면서 7의 배수. 갯수 및 총합 출력
		
		int sum=0;
		int sum2=0;
		int count=0;
		for(int i=1; i<=100; i++) {
			sum += i;
			
			if(i%14==0) {
			sum2+= i;
			count++;
			}
		}
		System.out.println("1~100까지 총합은: " +sum);
		System.out.printf("\n1~100까지 평균은: %.1f%n",sum/100.0);
		System.out.println("1~100, 2의배수7의배수 총합: " + sum2);
		System.out.println("1~100, 2의배수7의배수 갯수: " + count);
		System.out.println();
		
		int sum3=0;
		int count2=0;
		for(int i=1; i<=100; i++) {
			if(i%14==0) {    	//  (i%14==0) == (i%2==0 && i%7==0)
				sum3+=i;
				count2++;
			}
		}
		System.out.println("1~100, 2의배수7의배수 총합: " + sum3);
		System.out.println("1~100, 2의배수7의배수 갯수: " + count2);
		
	}

}
